{%- assign hide = section.settings.hide -%}
{%- assign hide_arrows = section.settings.hide_arrows -%}
{%- assign bg_color = section.settings.bg_color -%}
{%- assign bg_color_hide = section.settings.bg_color_hide -%}
{%- assign padding = section.settings.padding -%}

{%- assign class = "lander-satis-items col-md-3 col-sm-3 col-xs-6" -%}

{% if hide == false %}
<section id="lander-product-satisfaction">

  <div class="lander-steps {% if hide_arrows == true %}lander-steps--hidearrow{% endif %}">
   <div class="lander-step">
       <img src="{{ section.settings.fifth_full_img1 | img_url: 'master' }}" alt=""/>
      <h4>{{ section.settings.fifth_full_img_txt1 }}</h4>
   </div>
   <div class="lander-arrow">
      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="18" viewBox="0 0 34 18">
         <defs>
            <style>
               .a {
               fill: none;
               stroke: #fff;
               stroke-linecap: round;
               stroke-width: 2px;
               }
               .a {
               stroke-miterlimit: 10;
               }
               .a {
               stroke-linejoin: round;
               }
            </style>
         </defs>
         <title>arrow-right</title>
         <g>
            <line class="a" x1="10.97" y1="9.11" x2="31.97" y2="9.11"></line>
            <polyline class="a" points="26.64 3.11 31.97 9.11 26.64 15.11"></polyline>
         </g>
      </svg>
   </div>
   <div class="lander-step">
       <img src="{{ section.settings.fifth_full_img2 | img_url: 'master' }}" alt=""/>
      <h4>{{ section.settings.fifth_full_img_txt2 }}</h4>
   </div>
   <div class="lander-arrow">
      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="18" viewBox="0 0 34 18">
         <defs>
            <style>
               .a {
               fill: none;
               stroke: #fff;
               stroke-linecap: round;
               stroke-width: 2px;
               }
               .a {
               stroke-miterlimit: 10;
               }
               .a {
               stroke-linejoin: round;
               }
            </style>
         </defs>
         <title>arrow-right</title>
         <g>
            <line class="a" x1="10.97" y1="9.11" x2="31.97" y2="9.11"></line>
            <polyline class="a" points="26.64 3.11 31.97 9.11 26.64 15.11"></polyline>
         </g>
      </svg>
   </div>
   <div class="lander-step">
       <img src="{{ section.settings.fifth_full_img3 | img_url: 'master' }}" alt=""/>
      <h4>{{ section.settings.fifth_full_img_txt3 }}</h4>
   </div>
    {% if section.settings.fifth_full_img4 != blank and section.settings.fifth_full_img_txt4 != blank %}
   <div class="lander-arrow">
      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="18" viewBox="0 0 34 18">
         <defs>
            <style>
               .a {
               fill: none;
               stroke: #fff;
               stroke-linecap: round;
               stroke-width: 2px;
               }
               .a {
               stroke-miterlimit: 10;
               }
               .a {
               stroke-linejoin: round;
               }
            </style>
         </defs>
         <title>arrow-right</title>
         <g>
            <line class="a" x1="10.97" y1="9.11" x2="31.97" y2="9.11"></line>
            <polyline class="a" points="26.64 3.11 31.97 9.11 26.64 15.11"></polyline>
         </g>
      </svg>
   </div>
   <div class="lander-step">
       <img src="{{ section.settings.fifth_full_img4 | img_url: 'master' }}" alt=""/>
      <h4>{{ section.settings.fifth_full_img_txt4 }}</h4>
   </div>
    {% endif %}
</div>
</section>

<style>
	
.lander-steps {
    width: 90%;
    max-width: 1400px;
    margin: auto;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-align-items: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-justify-content: center;
    -ms-flex-pack: center;
    justify-content: center;
    padding: 56px 0;
  background-color: {{bg_color}};
    border-radius: 4px;
}

  .lander-steps--hidearrow .lander-arrow{
    visibility: hidden;
    width: 20px;
  }
.lander-steps svg {
    -webkit-flex: 0 0 75px;
    -ms-flex: 0 0 75px;
    flex: 0 0 75px;
}

.lander-steps svg .a {
    stroke: #ff674d;
    stroke-width: 2px;
}

.lander-step {
    -webkit-flex: 0 0 190px;
    -ms-flex: 0 0 190px;
    flex: 0 0 190px;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-align-items: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-flex-wrap: nowrap;
    -ms-flex-wrap: nowrap;
    flex-wrap: nowrap;
}

.lander-step h4 {
    line-height: 1;
    color: #ff674d;
    margin: 0 0 0 7px;
  	font-weight: bold;
}

.lander-arrow {
  	position: relative;
    left: -15px;
    opacity: 0.3;
}

@media (max-width: 960px) {
    .lander-step {
        -webkit-flex: 0 0 170px;
        -ms-flex: 0 0 170px;
        flex: 0 0 170px;
    }
}

@media (max-width: 900px) {

    .lander-steps {
        width: 100%;
		{% if bg_color_hide == true %}
        background-color: transparent;
      	{% endif %}
        margin-bottom: 56px;
        padding: 0 28px;
        box-sizing: border-box;
    }

    .lander-step {
        -webkit-flex: 0 1 100px;
        -ms-flex: 0 1 100px;
        flex: 0 1 100px;
        -webkit-flex-direction: column;
        -ms-flex-direction: column;
        flex-direction: column;
        text-align: center;
    }

    .lander-step h4 {
        margin: 14px 0 0;
    }

    .lander-arrow {
        padding: 0 14px;
    }
}

@media (max-width: 500px) {
    .lander-steps {
        		{% if bg_color_hide == true %}
        background-color: transparent;
      	{% endif %}
        margin-bottom: 56px;
        padding: 0 14px;
        padding-top: {{padding}}px;
    	padding-bottom: {{padding}}px;
    }

    .lander-steps svg {
        -webkit-flex: 0 0 65px;
        -ms-flex: 0 0 65px;
        flex: 0 0 65px;
    }

    .lander-step {
        -webkit-flex: 0 1 80px;
        -ms-flex: 0 1 80px;
        flex: 0 1 80px;
        -webkit-flex-direction: column;
        -ms-flex-direction: column;
        flex-direction: column;
        text-align: center;
    }

    .lander-step h4 {
        margin: 14px 0 0;
        font-size: 16px;
    }

    .lander-arrow {
        padding: 0;
      left: -5px;
    }
}


@media (max-width: 360px) {
    .lander-step {
        margin: 0 7px;
    }

    .lander-arrow {
        display: none;
    }
}
  
    .lander-satis-items > *{
  	display: inline-block;
    vertical-align: middle;
  }
  .lander-satis-items h3{
  	max-width: 53%;
    width: 100%;
  }
</style>

{% endif %}

{% schema %}
  {
    "name": "Product Satisfaction",
    "class": "lander-media-section",
    "settings": [
	{
        "type": "checkbox",
        "id": "hide",
        "label": "Hide this section",
		"default": false
      },
	{
        "type": "checkbox",
        "id": "hide_arrows",
        "label": "Hide Arrows",
		"default": false
      },
	{
        "type": "text",
        "id": "padding",
        "label": "Top/Bottom padding for mobile",
		"info": "Type in only numbers. Value is in pixels.",
		"default": "20"
      },
		{
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#f7f7f7"
      },
		{
        "type": "checkbox",
        "id": "bg_color_hide",
        "label": "Hide background on mobile",
		"default": false
      },
	  {
        "type": "image_picker",
        "id": "fifth_full_img1",
        "label": "1 - Item Image"
      },
      {
        "type": "text",
        "id": "fifth_full_img_txt1",
         "label": "1 - Item Text"
      },
      {
        "type": "image_picker",
        "id": "fifth_full_img2",
         "label": "2 - Item Image"
      },
      {
        "type": "text",
        "id": "fifth_full_img_txt2",
         "label": "2 - Item Text"
      },
      {
        "type": "image_picker",
        "id": "fifth_full_img3",
         "label": "3 - Item Image"
      },
      {
        "type": "text",
        "id": "fifth_full_img_txt3",
         "label": "3 - Item Text"
      },
      {
        "type": "image_picker",
        "id": "fifth_full_img4",
         "label": "4 - Item Image",
		"info": "For the fourth item add both image and text to show it up."
      },
      {
        "type": "text",
        "id": "fifth_full_img_txt4",
         "label": "4 - Item Text"
      }

	  ]
  }
{% endschema %}

